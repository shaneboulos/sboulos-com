      const rotatedZ = x * ySin + rotatedZ1 * yCos;

      // Simple perspective projection
      const perspective = 800;
      const scale = perspective / (perspective + rotatedZ);

      return {
        x: 600 + rotatedX * scale,  // Center at x=600 (middle of 1200-wide viewBox)
        y: rotatedY1,
